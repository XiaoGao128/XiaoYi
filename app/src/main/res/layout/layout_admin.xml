<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="330dp"
        android:background="@drawable/riple_btn_corner_3"
        android:gravity="center_horizontal"
        android:layout_height="280dp">
    <EditText
        android:id="@+id/et_name"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:hint="    账号:"
        android:layout_marginTop="20dp"
        android:background="#1AE9E1E1"
        android:textColor="#212"
        android:textColorHint="#ACA4A4"
        android:textSize="20dp"></EditText>
    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:hint="    密码:"
        android:layout_marginTop="20dp"
        android:background="#1AE9E1E1"
        android:textColor="#212"
        android:textColorHint="#ACA4A4"
        android:inputType="textPassword"
        android:textSize="20dp"></EditText>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"

            >
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/admin_radio_remeber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"
                android:textColor="#212"
                android:button="@null"
                android:textSize="16dp"
                android:background="@drawable/radio_2"
                android:layout_marginRight="40dp"
></androidx.appcompat.widget.AppCompatCheckBox>
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/admin_radio_autoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动登录"
                android:textColor="#212"
                android:button="@null"
                android:textSize="16dp"
                android:background="@drawable/radio_2"
                ></androidx.appcompat.widget.AppCompatCheckBox>
        </LinearLayout>
    <Button
        android:id="@+id/adm_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="登录"
        android:layout_marginTop="20dp"
        android:background="@drawable/riple_btn"
        android:textSize="20dp"></Button>
    </LinearLayout>
