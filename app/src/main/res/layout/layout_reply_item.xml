<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/reply_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:layout_margin="5dp"
            android:textSize="18dp"></TextView>
        <TextView
            android:id="@+id/reply_tv_huifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 回复 "
            android:layout_margin="5dp"
            android:visibility="invisible"
            ></TextView>
        <TextView
            android:id="@+id/reply_tv_replyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="18dp"></TextView>
        <TextView
            android:id="@+id/reply_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timing"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"></TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/reply_tv_describ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="回复内容回复内容回复内容回复内容回复内容回复内容回复内容"
        android:textSize="17dp"
        android:layout_margin="5dp"></TextView>
</LinearLayout>